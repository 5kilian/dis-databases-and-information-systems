<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.cell.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<VBox prefHeight="400.0"
      prefWidth="600.0"
      xmlns="http://javafx.com/javafx/8.0.112"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="de.estate.manager.controller.EstateListController">
  <fx:include source="menu.fxml" />
  <BorderPane>
    <padding>
      <Insets bottom="25"
              left="25"
              right="25"
              top="25" />
    </padding>
    <top>
      <HBox>
        <padding>
          <Insets bottom="10.0"
                  top="5.0" />
        </padding>
        <ImageView onMouseClicked="#home">
          <Image url="@../images/32/arrow-left.png" />
        </ImageView>
        <Pane HBox.hgrow="SOMETIMES" />
        <Label text="Estate management">
          <font>
            <Font size="20.0" />
          </font>
        </Label>
        <Pane HBox.hgrow="SOMETIMES" />
        <ImageView onMouseClicked="#addEstate">
          <Image url="@../images/32/plus.png" />
        </ImageView>
      </HBox>
    </top>
    <center>
      <TableView fx:id="tableView">
        <columns>
          <TableColumn text="ID"
                       prefWidth="48"
                       minWidth="48"
                       maxWidth="48">
            <cellValueFactory>
              <PropertyValueFactory property="Id" />
            </cellValueFactory>
          </TableColumn>
          <TableColumn fx:id="typeColumn"
                       prefWidth="24"
                       minWidth="24"
                       maxWidth="24"
                       resizable="false">
            <cellValueFactory>
              <PropertyValueFactory property="Type" />
            </cellValueFactory>
          </TableColumn>
          <TableColumn text="Street">
            <cellValueFactory>
              <PropertyValueFactory property="Street" />
            </cellValueFactory>
          </TableColumn>
          <TableColumn text="Number">
            <cellValueFactory>
              <PropertyValueFactory property="Number" />
            </cellValueFactory>
          </TableColumn>
          <TableColumn text="ZIP">
            <cellValueFactory>
              <PropertyValueFactory property="Zip" />
            </cellValueFactory>
          </TableColumn>
          <TableColumn text="City">
            <cellValueFactory>
              <PropertyValueFactory property="City" />
            </cellValueFactory>
          </TableColumn>
          <TableColumn text="Area">
            <cellValueFactory>
              <PropertyValueFactory property="Area" />
            </cellValueFactory>
          </TableColumn>
          <TableColumn text="Manager">
            <cellValueFactory>
              <PropertyValueFactory property="Agent" />
            </cellValueFactory>
          </TableColumn>

          <TableColumn fx:id="editColumn"
                       maxWidth="50"
                       minWidth="50"
                       prefWidth="50"
                       resizable="false" />
        </columns>
        <columnResizePolicy>
          <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
        </columnResizePolicy>
      </TableView>
    </center>
    <bottom>
      <Label fx:id="infoLabel" />
    </bottom>
  </BorderPane>

</VBox>
